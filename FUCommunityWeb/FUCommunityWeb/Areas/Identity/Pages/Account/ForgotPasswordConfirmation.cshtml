@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div style="display: flex; justify-content: center; align-items: center; flex-direction: column; text-align: center; background-color: #f7f7f7; padding:70px 0;">
    <h1 style="color: #20B486; font-size: 2.5em; margin-bottom: 20px;">@ViewData["Title"]</h1>
    <p style="color: #555; font-size: 1.2em; max-width: 600px;">
        Please check your email to reset your password.
    </p>
</div>

